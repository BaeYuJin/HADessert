<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ivory">

    <View
        android:id="@+id/introDessertsList_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/layout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/macaron_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마카롱"
        android:textColor="@color/darkgray"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/macaron_imageView"
        app:layout_constraintStart_toStartOf="@+id/macaron_imageView"
        app:layout_constraintTop_toTopOf="@+id/introDessertsList_view" />

    <ImageView
        android:id="@+id/macaron_imageView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/introDessertsList_view"
        app:layout_constraintEnd_toEndOf="@+id/introDessertsList_view"
        app:layout_constraintStart_toStartOf="@+id/introDessertsList_view"
        app:srcCompat="@drawable/macaron" />
</androidx.constraintlayout.widget.ConstraintLayout>