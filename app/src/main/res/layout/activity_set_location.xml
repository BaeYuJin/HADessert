<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ivory"
    tools:context=".activity.SetLocationActivity">

    <TextView
        android:id="@+id/setLocationBack_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/x"
        app:layout_constraintStart_toStartOf="@+id/setLoationTitle_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setLoationTitle_textView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/im_hyemin_bold"
        android:text="지번, 도로명, 건물명을 입력하세요"
        android:textColor="@color/background_purple"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="@+id/setLocation_searchView"
        app:layout_constraintTop_toBottomOf="@+id/setLocationBack_button" />

    <SearchView
        android:id="@+id/setLocation_searchView"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/layout7"
        app:layout_constraintEnd_toStartOf="@+id/setLocationSearch_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setLoationTitle_textView">

    </SearchView>

    <View
        android:id="@+id/setLocationSearch_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="@drawable/layout7"
        app:layout_constraintBottom_toBottomOf="@+id/setLocation_searchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/setLocation_searchView"
        app:layout_constraintTop_toTopOf="@+id/setLocation_searchView" />

    <ImageView
        android:id="@+id/setLocation_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/setLocationSearch_view"
        app:layout_constraintEnd_toEndOf="@+id/setLocationSearch_view"
        app:layout_constraintStart_toStartOf="@+id/setLocationSearch_view"
        app:layout_constraintTop_toTopOf="@+id/setLocationSearch_view"
        app:srcCompat="@drawable/loupe" />

    <View
        android:id="@+id/setLocation_view"
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/layout7"
        app:layout_constraintEnd_toEndOf="@+id/setLocationSearch_view"
        app:layout_constraintStart_toStartOf="@+id/setLocation_searchView"
        app:layout_constraintTop_toBottomOf="@+id/setLocation_searchView" />

    <TextView
        android:id="@+id/setLocationGuide_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/im_hyemin_bold"
        android:text="현 위치로 주소 설정"
        android:textColor="@color/background_purple"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/setLocation_view"
        app:layout_constraintEnd_toEndOf="@+id/setLocation_view"
        app:layout_constraintStart_toStartOf="@+id/setLocation_view"
        app:layout_constraintTop_toTopOf="@+id/setLocation_view" />

</androidx.constraintlayout.widget.ConstraintLayout>