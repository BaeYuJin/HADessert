<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ivory"
    android:textAlignment="textStart">

    <TextView
        android:id="@+id/findingSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sweet Spot"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/findingTitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="230dp"
        android:text="비밀번호 찾기"
        android:textColor="@color/background_purple"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findingSS" />

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/lightgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findingTitle_textView"/>

    <TextView
        android:id="@+id/findingGuide_textView"
        android:layout_width="320dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/findingGuide"
        android:textAlignment="center"
        android:textColor="@color/darkgray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_view" />

    <EditText
        android:id="@+id/finding_editTextEmailAddress"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/layout2"
        android:ems="10"
        android:hint="  이메일 입력 (example@gmail.com)"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findingGuide_textView" />

    <View
        android:id="@+id/square_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/layout2"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finding_editTextEmailAddress"/>

    <ImageView
        android:id="@+id/phone_imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/square_view"
        app:layout_constraintStart_toStartOf="@+id/square_view"
        app:layout_constraintTop_toTopOf="@+id/square_view"
        app:srcCompat="@drawable/phone" />

    <TextView
        android:id="@+id/phoneTitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:text="휴대폰 인증"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/phone_imageView"
        app:layout_constraintStart_toStartOf="@+id/phone_imageView"
        app:layout_constraintTop_toBottomOf="@+id/phone_imageView" />

    <TextView
        android:id="@+id/phoneGuide_textView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:text="@string/phoneGuide"
        android:textAlignment="center"
        android:textColor="@color/darkgray"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/phoneTitle_textView"
        app:layout_constraintStart_toStartOf="@+id/phoneTitle_textView"
        app:layout_constraintTop_toBottomOf="@+id/phoneTitle_textView" />

    <View
        android:id="@+id/filledSquare_view"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/layout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/square_view" />

    <TextView
        android:id="@+id/findingGuide2_textView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/findingGuide2"
        android:textAlignment="viewStart"
        android:textColor="@color/darkgray"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/filledSquare_view"
        app:layout_constraintStart_toStartOf="@+id/filledSquare_view"
        app:layout_constraintTop_toTopOf="@+id/filledSquare_view" />

</androidx.constraintlayout.widget.ConstraintLayout>